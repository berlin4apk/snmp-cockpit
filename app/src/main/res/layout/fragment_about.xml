<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.emschu.snmp.cockpit.CockpitMainActivity">
    <ImageView
        android:layout_width="180dp"
        android:contentDescription="@string/app_logo_content_description"
        android:layout_gravity="center_horizontal"
        android:layout_height="65dp"
        android:background="@drawable/lettering_logo_violet"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/lv_about_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
