<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tree_view_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/text_view_node_arrow_side"
        android:layout_height="@dimen/text_view_node_arrow_side"
        android:layout_gravity="center_vertical"
        android:contentDescription="arrow"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/query_catalog_list_item_text"
        android:layout_marginStart="12dp"
        app:drawableStartCompat="@drawable/ic_view_list_black"
        android:drawablePadding="@dimen/tree_view_padding"
        android:gravity="center_vertical"
        android:textSize="@dimen/tree_view_text_size"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>